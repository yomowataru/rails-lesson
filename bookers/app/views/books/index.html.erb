<h1>Books</h1>

<div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Body</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th scope="row"><%= book.id %></th>
        <td><%= book.title %></td>
        <td><%= truncate(book.body, length: 20) %></td>
        <td>
          <%= link_to "Show", book_path(book), class: "mr-2" %>
          <%= link_to "Edit", edit_book_path(book), class: "mr-2" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= link_to "新しい本を投稿する", new_book_path, class: "btn btn-outline-success" %>
</div>

